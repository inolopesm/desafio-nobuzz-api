{
  "name": "desafio-nobuzz-api",
  "version": "1.0.0",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"libs/**/*.ts\"",
    "nest": "node --env-file=.env node_modules/@nestjs/cli/bin/nest",
    "start": "npm run nest -- start",
    "start:dev": "npm run nest -- start --watch",
    "start:debug": "npm run nest -- start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,libs}/**/*.ts\" --fix",
    "prepare": "husky install",
    "test": "glob -c \"node --test --require ts-node/register\" \"src/**/*.spec.ts\" \"libs/**/*.spec.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^10.2.8",
    "@nestjs/core": "^10.2.8",
    "@nestjs/platform-fastify": "^10.2.8",
    "argon2": "^0.31.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@nestjs/cli": "^10.2.1",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.10.8",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "glob": "^10.3.10",
    "husky": "^8.0.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "20.9.0",
    "npm": "10.1.0"
  }
}
